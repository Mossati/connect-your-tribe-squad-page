<%- include('./partials/head') %>

<a href="/">Back</a>

<main>
    <section>
        <h1>Squad <%= squad.name %></h1>
        <ul class="card-list">
            <% persons.forEach(person => { %>
            <li class="card-item">
                <img src="<%= person.avatar.includes('https') ? person.avatar : '/assets/person.png' %>" alt="avatar">
                <article class="card-content">
                    <h2><%= person.name + " " + person.prefix + " " + person.surname %></h2>
                    <ul>
                        <li>
                            <% if (person.nickname !== "") { %>
                                <i class="fa-solid fa-signature"></i> <%= person.nickname %>
                            <% } %>
                        </li>

                        <% squads.forEach(squad => { %>
                            <% if (squad.id == person.squad_id) { %>
                                <li><i class="fa-solid fa-people-group"></i> <%= squad.name %></li>
                        <% } }) %>
                    </ul>
                    <div class="btn-row">
                        <a class="btn btn-profile" href="#"><i class="fa-brands fa-github"></i> Github</a>
                        <button class="btn btn-flip"><i class="fa-solid fa-repeat"></i> Flip</button>
                    </div>
                </article>
            </li>
            <% }) %>
        </ul>
    </section>
</main>

<%- include('./partials/foot') %>